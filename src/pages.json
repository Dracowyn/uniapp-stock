{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "控制台"
			}
		},
		{
			"path": "pages/admin/index",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/manage/base/index",
			"style": {
				"navigationBarTitleText": "管理"
			}
		},
		{
			"path": "pages/admin/bind",
			"style": {
				"navigationBarTitleText": "绑定账号",
				"enablePullDownRefresh": true
			}
		}
		,
		{
  "path": "pages/index/agressment",
  "style": {
    "navigationBarTitleText": "用户服务协议",
    "enablePullDownRefresh": true
  }
}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#2c3e50",
		"selectedColor": "#18bc9c",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "/static/images/dashboard.png",
				"selectedIconPath": "/static/images/dashboard_active.png",
				"text": "控制台"
			},
			{
				"pagePath": "pages/manage/base/index",
				"iconPath": "/static/images/index.png",
				"selectedIconPath": "/static/images/index_active.png",
				"text": "管理"
			},
			{
				"pagePath": "pages/admin/index",
				"iconPath": "/static/images/my.png",
				"selectedIconPath": "/static/images/my_active.png",
				"text": "我的"
			}
		],
		"backgroundColor": "#ffffff"
	}
}